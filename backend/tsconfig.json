{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es2017",
            "esnext.asynciterable"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "pretty": true,
        "sourceMap": true,
        "outDir": "./build",
        "allowJs": true,
        "noEmit": false,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@config/*": ["src/config/*"],
            "@utils/*": ["src/utils/*"],
            "@models/*": ["src/models/*"],
            "@loaders/*": ["src/loaders/*"],
            "@api/*": ["src/api/*"],
            "@routes/*": ["src/api/routes/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@services/*": ["src/services/*"],
            "@strategies/*": ["src/strategies/*"],
            "@serializers/*": ["src/serializers/*"],
            "@lib/*": ["src/lib/*"],
            "@actions/*": ["src/actions/*"],
            "@src/*": ["src/*"],
        },
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
    ],
}